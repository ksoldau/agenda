!!!
%html
  %head
    %title Scratch
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application" 
    = csrf_meta_tags
    
  %body
    .header
      %h1 Agenda
      - if current_user != nil
        .sign_out_button
          = link_to "sign out", user_assignments_path(current_user, :query => 'week', :which => params[:which]), {:id => 'week_view'}

  = yield

