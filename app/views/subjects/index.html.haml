        - x.each do |date, a|
          .subject_a_date
            = date.strftime("%A %b %d, %Y");
          - a.each do |a|
            .as_box{:class => (a.completed ? "completed" : "not_completed")}
              .due_time
                -#= a.due_date.to_formatted_s(:long)
                due at
