                  = link_to "Delete", user_assignment_path(current_user, a), :method => :delete, :remote => true
              .edit_btn
                .edit_dialog{:title => "Edit Assignment", 
                  :class => a.completed ? "completed" : "not_completed"}
                  = simple_form_for [current_user, a], remote: true, html: {data: {type: 'json'}} do |f|
                    = f.association :subject, collection: current_user.subjects    
